<div <%= tag.attributes(wrapper_attributes) %>>
  <%# Mobile Sidebar Backdrop %>
  <div class="fixed inset-0 bg-black/50 z-40 <%= breakpoint == 'lg' ? 'lg:hidden' : 'md:hidden' %> hidden transition-opacity duration-300"
       data-sidebar-target="backdrop"
       data-action="click->sidebar#close"></div>

  <%# Desktop Collapse Toggle Button (Outside sidebar, always visible) %>
  <button type="button"
          class="hidden <%= breakpoint == 'lg' ? 'lg:block' : 'md:block' %> fixed left-0 top-20 p-1.5 rounded-r-full bg-white dark:bg-gray-800 border border-l-0 border-gray-200 dark:border-gray-700 shadow-md hover:shadow-lg transition-all z-[60]"
          data-action="click->sidebar#toggleDesktopCollapse"
          data-sidebar-target="toggleButton"
          title="Toggle sidebar">
    <svg class="w-4 h-4 text-gray-600 dark:text-gray-400 transition-transform duration-300"
         data-sidebar-target="collapseIcon"
         fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
  </button>

  <%# Sidebar Panel (Mobile slides in, Desktop overlays) %>
  <div class="fixed inset-y-0 left-0 z-50 w-64 flex-shrink-0 bg-gray-100 dark:bg-gray-900 border-r border-gray-200 dark:border-gray-700 transform -translate-x-full <%= breakpoint == 'lg' ? 'lg:translate-x-0' : 'md:translate-x-0' %> motion-safe:transition-all motion-safe:duration-300 ease-in-out"
       data-sidebar-target="panel">
    <div class="h-full flex flex-col">
      <%# Header Section - Profile Dropdown Area %>
      <% if header? %>
        <div class="relative px-3 py-4 border-b border-gray-200 dark:border-gray-700">
          <%= header %>
          <button type="button"
                  class="<%= breakpoint == 'lg' ? 'lg:hidden' : 'md:hidden' %> absolute top-4 right-4 p-1.5 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors z-10"
                  data-action="click->sidebar#close">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      <% end %>

      <%# Navigation Section %>
      <nav class="flex-1 overflow-y-auto px-2 py-4 space-y-1">
        <% nav_items.each do |item| %>
          <%= item %>
        <% end %>
      </nav>

      <%# Footer Section (Optional) %>
      <% if footer? %>
        <div class="border-t border-gray-200 dark:border-gray-700 p-4">
          <%= footer %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Secondary Sidebar - fixed sidebar on desktop only (hidden on mobile) %>
  <% if secondary_sidebar? %>
    <div class="hidden lg:block fixed inset-y-0 left-0 w-64 bg-gray-50 dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 z-30 overflow-y-auto"
         data-sidebar-target="secondarySidebar">
      <div class="p-6">
        <%= secondary_sidebar %>
      </div>
    </div>
  <% end %>

  <%# Main Content Area %>
  <div class="flex-1 flex flex-col min-w-0 overflow-hidden">
    <%# Mobile Header %>
    <header class="<%= breakpoint == 'lg' ? 'lg:hidden' : 'md:hidden' %> bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 px-4 py-3 flex items-center justify-between sticky top-0 z-40">
      <button type="button"
              class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
              data-action="click->sidebar#toggle">
        <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <div class="w-10"></div>
    </header>

    <%# Mobile Navigation (below header, above main content) %>
    <% if mobile_nav? %>
      <div class="<%= breakpoint == 'lg' ? 'lg:hidden' : 'md:hidden' %>">
        <%= mobile_nav %>
      </div>
    <% end %>

    <%# Main Content %>
    <main class="flex-1 overflow-y-auto" data-sidebar-target="mainContent">
      <%= content %>
    </main>
  </div>
</div>
