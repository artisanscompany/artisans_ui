<div <%= tag.attributes(html_options) %>>
  <blockquote class="text-lg text-neutral-900 mb-4">
    <%= quote %>
  </blockquote>
  <footer class="flex flex-col items-center gap-2">
    <% if author_image.present? %>
      <div class="mx-auto size-10 rounded-full bg-neutral-100 flex items-center justify-center overflow-hidden">
        <%= image_tag author_image, class: "w-full h-full object-cover rounded-full" %>
      </div>
    <% end %>
    <div class="font-semibold text-neutral-900"><%= author_name %></div>
    <div class="text-sm text-neutral-500"><%= author_title %></div>
  </footer>
</div>
