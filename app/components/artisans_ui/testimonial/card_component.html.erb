<div <%= tag.attributes(html_options) %>>
  <div class="bg-white dark:bg-neutral-900 rounded-lg border border-black/10 dark:border-white/10 p-8">
    <div class="flex items-center mb-4">
      <%= image_tag author_image, class: "size-10 rounded-full object-cover" %>
      <div class="ml-4">
        <div class="font-semibold text-neutral-900 dark:text-white"><%= author_name %></div>
        <div class="text-sm text-neutral-500 dark:text-neutral-400"><%= author_title %></div>
      </div>
    </div>
    <blockquote class="text-neutral-700 dark:text-neutral-300 leading-relaxed">
      <%= quote %>
    </blockquote>
  </div>
</div>
