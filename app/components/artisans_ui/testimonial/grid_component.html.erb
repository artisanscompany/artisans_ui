<div <%= tag.attributes(html_options) %>>
  <% testimonials.each do |testimonial| %>
    <div class="bg-white rounded-lg border border-neutral-200 p-6 flex flex-col justify-between">
      <blockquote class="text-neutral-700 mb-4">
        <%= testimonial.quote %>
      </blockquote>
      <footer class="flex items-center">
        <%= image_tag testimonial.author_image, class: "size-8 rounded-full object-cover", alt: testimonial.author_name %>
        <div class="ml-3">
          <div class="text-sm font-semibold text-neutral-900"><%= testimonial.author_name %></div>
          <div class="text-xs text-neutral-500"><%= testimonial.author_title %></div>
        </div>
      </footer>
    </div>
  <% end %>
</div>
