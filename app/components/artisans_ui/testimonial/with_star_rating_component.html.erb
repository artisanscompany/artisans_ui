<div <%= tag.attributes(html_options) %>>
  <div class="bg-white rounded-lg border border-black/10 p-8 text-center">
    <!-- Star Rating -->
    <div class="flex justify-center mb-4">
      <div class="flex items-center space-x-1">
        <% full_stars.times do %>
          <svg class="size-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
            <%= star_svg %>
          </svg>
        <% end %>
        <% if has_half_star? %>
          <svg class="size-5" viewBox="0 0 20 20">
            <defs>
              <linearGradient id="half-fill">
                <stop offset="50%" stop-color="#fbbf24" />
                <stop offset="50%" stop-color="#d1d5db" />
              </linearGradient>
            </defs>
            <path fill="url(#half-fill)" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        <% end %>
        <% (5 - full_stars - (has_half_star? ? 1 : 0)).times do %>
          <svg class="size-5 text-neutral-300 fill-current" viewBox="0 0 20 20">
            <%= star_svg %>
          </svg>
        <% end %>
      </div>
    </div>

    <blockquote class="text-lg text-neutral-700 mb-4">
      <%= quote %>
    </blockquote>

    <footer>
      <div class="flex items-center justify-center">
        <%= image_tag author_image, class: "size-10 rounded-full object-cover" %>
        <div class="ml-3 text-left">
          <div class="font-semibold text-neutral-900"><%= author_name %></div>
          <div class="text-sm text-neutral-500"><%= author_title %></div>
        </div>
      </div>
    </footer>
  </div>
</div>
