<div <%= tag.attributes(html_options) %>>
  <div class="rounded-2xl border bg-white border-neutral-200 text-center">
    <div class="p-5 sm:p-8 md:p-12">
      <svg xmlns="http://www.w3.org/2000/svg" class="size-6 mx-auto" width="18" height="18" viewBox="0 0 18 18">
        <%= lock_icon_svg %>
      </svg>
      <h2 class="my-2 text-2xl font-bold"><%= title %></h2>
      <% if subtitle.present? %>
        <h3 class="mb-8 text-sm text-neutral-600"><%= subtitle %></h3>
      <% end %>
      <%= form_with url: form_url, method: form_method, data: { two_factor_target: "form", action: "submit->two-factor#handleSubmit" }, class: "space-y-6" do |f| %>
        <div class="inline-flex items-center gap-1.5">
          <% 6.times do |i| %>
            <% num = "num#{i + 1}" %>
            <% if i == 3 %>
              <span class="text-sm text-neutral-400">-</span>
            <% end %>
            <%= f.text_field num,
              data: {
                two_factor_target: num,
                action: "input->two-factor#handleInput keydown->two-factor#handleKeydown paste->two-factor#handlePaste"
              },
              type: "text",
              inputmode: "numeric",
              maxlength: "1",
              autocomplete: (i == 0 ? "one-time-code" : "off"),
              required: true,
              class: "block w-8 rounded-lg border border-neutral-200 px-2 py-1 text-center text-base placeholder-neutral-500 focus:outline-neutral-800 focus:border-neutral-800" %>
          <% end %>
        </div>
        <div class="flex justify-center">
          <%= f.submit submit_text,
            data: { two_factor_target: "submitButton" },
            class: "min-w-32 flex items-center justify-center gap-1.5 rounded-lg border border-neutral-400/30 bg-neutral-800 px-3.5 py-2 text-sm font-medium whitespace-nowrap text-white shadow-sm transition-all duration-100 ease-in-out select-none hover:bg-neutral-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-neutral-600 disabled:cursor-not-allowed disabled:opacity-50" %>
        </div>
      <% end %>
      <% if content.present? %>
        <div class="mt-5 text-sm text-neutral-500">
          <%= content %>
        </div>
      <% end %>
    </div>
  </div>
</div>
